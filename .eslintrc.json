{
  "extends": [
    "plugin:mattermost/react",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["mattermost", "@typescript-eslint"],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.5"
    }
  },
  "env": {
    "jest": true
  },
  "globals": {
    "__DEV__": true
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.test.jsx"],
      "env": {
        "jest": true
      }
    }
  ]
}
