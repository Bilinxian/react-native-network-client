{
  "name": "@mattermost/react-native-network-client",
  "version": "0.1.0",
  "description": "Configurable network clients for React Native. Uses Alamofire for iOS and OkHttp3 for Android.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-network-client.podspec",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!example",
    "!.vscode",
    "!**/.idea",
    "!**/.gradle",
    "!android/build",
    "!ios/Build",
    "!.circleci"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build && husky install",
    "release": "release-it",
    "example": "cd example && npm",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "npm run example i && npm run pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "network"
  ],
  "repository": "https://github.com/mattermost/react-native-network-client",
  "author": "Miguel Alatzar <this.migbot@gmail.com> (https://github.com/migbot)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattermost/react-native-network-client/issues"
  },
  "homepage": "https://github.com/mattermost/react-native-network-client#readme",
  "dependencies": {
    "validator": "13.7.0",
    "zod": "3.14.2"
  },
  "devDependencies": {
    "@babel/runtime": "7.17.8",
    "@commitlint/config-conventional": "16.2.1",
    "@react-native-community/eslint-config": "3.0.1",
    "@release-it/conventional-changelog": "4.2.2",
    "@types/jest": "27.4.1",
    "@types/react": "17.0.43",
    "@types/react-native": "0.67.3",
    "@types/validator": "13.7.2",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "commitlint": "16.2.3",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-mattermost": "github:mattermost/eslint-plugin-mattermost#23abcf9988f7fa00d26929f11841aab7ccb16b2b",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "pod-install": "0.1.32",
    "react": "17.0.2",
    "react-native": "0.67.4",
    "react-native-builder-bob": "0.18.2",
    "release-it": "14.13.1",
    "typescript": "4.6.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
